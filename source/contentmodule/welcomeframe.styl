#welcomeframe
    position: relative
    height 100%
    padding 0 30px
    box-sizing: border-box
    margin-right auto
    max-width: 300px
    text-align: center
    h1
        font-size 42px
        padding-top 60px
        margin-bottom 30px

    #welcoming-text-container
        margin-bottom 30px

    #button-container  
        position: absolute
        left 0
        width 100%
        bottom 70px      
        .click-button
            display block
            width 220px
            margin auto
            box-sizing: border-box
            background-color cd-flash
            padding 15px
            // font-weight: bold
            border-radius 3px
            margin-top 25px
            box-shadow 0 0 5px 0 alpha(black, 0.2)
            // border solid 2px cd-darkblue

    #welcome-decoration-top
        position absolute
        top -50px
        left 0
        height 100px
        width 100%
        background-color cd-blue
        transform-origin bottom left
        transform rotate(-23deg)

    #welcome-decoration-bottom
        position absolute
        bottom -820px
        left -40px
        height 1000px
        width 5000px
        background-color cd-blue
        transform-origin top left
        transform rotate(-23deg)