/*==========================================================
 Reward List Styles
==========================================================*/
#rewardslistframe
    position relative
    height 100%
    width 100%
    overflow: hidden

#rewardslist-container
    width 100%
    height 100%
    overflow-y auto
    overflow-x hidden
    padding 60px 30px
    box-sizing: border-box

    .reward-button
        display block
        width 100%
        max-width 420px
        // width: 220px
        // margin auto
        box-sizing: border-box
        color cd-darkblue
        background-color cd-flash
        padding 15px
        // font-weight: bold
        border-radius 3px
        margin-bottom 25px
        box-shadow 0 0 5px 0 alpha(black, 0.2)
