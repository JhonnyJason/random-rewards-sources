// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
cd-foreground = black
cd-flash = purple
// cd-background = black
// cd-background = #0A6E35
cd-casinored = #972a27
cd-billardgreen = #0A6E35
cd-actionorange = #ff8e1a

cd-menu-color = cd-casinored
cd-menu-background = black
cd-content-background = cd-billardgreen

/*==========================================================
Global Variables
==========================================================*/
// max-content-width = 900px
// mobile-side-padding = 15px
header-height = 60px
footer-height = header-height

/*==========================================================
General Tag Styles
==========================================================*/
body
    background-color cd-background
    color cd-foreground
    font-family: Arial, Helvetica, sans-serif
    text-align: center
    font-size: 12pt
    height 100vh
    width 100%
    overflow hidden

h1
    font-size: 17pt
h2
    font-size: 15pt
p
    font-size: 12pt

svg
    width: inherit
    height: inherit