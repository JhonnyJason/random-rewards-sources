// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
cd-foreground = white
cd-flash = purple
cd-background = black
cd-casinored = #972a27

/*==========================================================
Global Variables
==========================================================*/
// max-content-width = 900px
// mobile-side-padding = 15px
header-height = 70px
footer-height = header-height

/*==========================================================
General Tag Styles
==========================================================*/
body
    background-color cd-background
    color cd-foreground
    font-family: Arial, Helvetica, sans-serif
    text-align: center
    font-size: 12pt
    height 100vh
    width 100%
    overflow hidden

h1
    font-size: 17pt
h2
    font-size: 15pt
p
    font-size: 12pt

svg
    width: inherit
    height: inherit