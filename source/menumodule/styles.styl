menu-icon-size = 25px

#menu-hidden-templates
    display: none

#menu
    width 260px
    height 100% 
    box-sizing: border-box   
    padding 5px 15px
    position absolute
    top 0
    right 0
    background-color white
    transition transform 0.3s
    transform translateX(102%)

    .menu-group
        padding 10px 0
    .menu-entry
        padding 8px 15px 
        display flex
        align-items: center
        @extends .click-button
    .menu-entry:hover
        background-color alpha(cd-flash, 0.2)
        
    .menu-icon
        width: menu-icon-size
        height: menu-icon-size

    .menu-label
        line-height: 150%
        font-size: 20px
        margin-left 15px
        // funny specific issue here...
        position relative
        top 1px

#all-users
    border-top solid 1px alpha(cd-flash, 0.1)
    border-bottom solid 1px alpha(cd-flash, 0.1)

.no-user
    #all-users
        border-bottom none
        padding 0
    #menu-logout
        pointer-events: none
        opacity 0.6
        
.menu-on
    #menu
        transform translateX(0)