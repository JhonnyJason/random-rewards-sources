// header styles
header-icon-size = 45px
header-burger-size = 30px

#header
    background-color cd-menu-background
    color cd-menu-color
    box-shadow 0 0 7px 0 alpha(black, 0.4)
    display: flex
    justify-content: space-between
    align-items: center
    width 100%
    height 100%
    box-sizing: border-box
    padding 0 15px
    position: relative
    z-index: 99
    #app-logo
        height: header-icon-size
        width: header-icon-size

    #menu-button
        // user-select: none
        height: header-burger-size
        width: header-burger-size

    #menu-close-button
        // user-select: none
        height: header-burger-size
        width: header-burger-size
        display: none

.menu-on
    #header
        #menu-button
            display none
        #menu-close-button
            display: block
