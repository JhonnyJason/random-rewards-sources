// header styles
header-icon-size = 45px
header-burger-size = 30px

#header
    background-color cd-casinored
    color black
    box-shadow 0 0 5px 0 alpha(black, 0.1)
    display: flex
    justify-content: space-between
    align-items: center
    width 100%
    height 100%
    box-sizing: border-box
    padding 15px
    position: relative
    z-index: 99

    #random-rewards-logo
        height: header-icon-size
        width: header-icon-size

    #menu-button
        // user-select: none
        height: header-burger-size
        width: header-burger-size

    #menu-close-button
        // user-select: none
        height: header-burger-size
        width: header-burger-size
        display: none

.menu-on
    #header
        #menu-button
            display none
        #menu-close-button
            display: block
